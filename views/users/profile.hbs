<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}"
      style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    <br>
  </div>
  <div class="col-md-8">
    <h3>{{user.name}}</h3>
    <p>{{user.email}}</p>
    <p>{{user.Comments.length}} 已評論餐廳</p>
    <p>{{user.FavoritedRestaurants.length}} 收藏的餐廳</p>
    <p>{{user.Followings.length}} followings (追蹤者)</p>
    <p>{{user.Followers.length}} followers (追蹤者)</p>
    <a href="/users/{{user.id}}/edit">
      <button type="button" class="btn btn-primary">edit</button>
    </a>
  </div>
  <hr>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card my-4">
      <div class="card-header">
        <h5 class="card-title">{{user.Followings.length}} followings (追蹤者)</h5>
      </div>
      <div class="card-body">
        <div class="row row-cols-md-12 g-4 ">
          {{#each user.Followings}}
          <div class="col-2">
            <div class="card">
              <a href="/users/{{this.id}}">
                <img class="img-fluid" src="{{this.image}}" alt="restaurant image">
              </a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="card my-4">
      <div class="card-header">
        <h5 class="card-title">{{user.Followers.length}} followers (追蹤者)</h5>
      </div>
      <div class="card-body">
        <div class="row row-cols-md-12 g-4 ">
          {{#each user.Followers}}
          <div class="col-2">
            <div class="card">
              <a href="/users/{{this.id}}">
                <img class="img-fluid" src="{{this.image}}" alt="restaurant image">
              </a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card my-4">
      <div class="card-header">
        <h5 class="card-title">{{user.Comments.length}} 已評論餐廳</h5>
      </div>
      <div class="card-body">
        <div class="row row-cols-md-12 g-4 ">
          {{#each user.Comments}}
          <div class="col-2">
            <div class="card">
              <a href="/restaurants/{{this.Restaurant.id}}">
                <img class="img-fluid" src="{{this.Restaurant.image}}" alt="restaurant image">
              </a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="card my-4">
      <div class="card-header">
        <h5 class="card-title">{{user.FavoritedRestaurants.length}} 收藏的餐廳</h5>
      </div>
      <div class="card-body">
        <div class="row row-cols-md-12 g-4 ">
          {{#each user.FavoritedRestaurants}}
          <div class="col-2">
            <div class="card">
              <a href="/restaurants/{{this.id}}">
                <img class="img-fluid" src="{{this.image}}" alt="restaurant image">
              </a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>